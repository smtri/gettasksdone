<h1>New project</h1>

<%= form_for :project, url: projects_path do |f| %>

    <% if @project.errors.any? %>
        <div id="error_explanation">
          <ul>
            <% @project.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', projects_path %>